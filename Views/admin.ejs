    <h1>Shirt Styles</h1>
    <ul>
        <% products.forEach(p => { %>
            <li>
                <a href="/products/<%= p._id %>"><%= p.name; %></a>
                <form action="/products/<%= p._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE" />
                </form>
                <a href="/products/<%=p._id %>/edit">Edit</a>   
            </li>
        <% }); %>
    </ul>
    
</body>
</html>